<div id="recipes-index" class="section-wrapper">
<% if @recipes.empty? %>
  <div class="no-record-message">
It seems there are no recipes at record at this moment. Would you like to add some?
  </div>
<% end %>

  <div class="recipes-container">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div class="title-info">
          <h2><%= link_to recipe.name, recipe_path(recipe), class: 'heading-link' %></h2>
          <% if can? :destroy, recipe %>
            <%= button_to 'Remove', recipe_path(recipe), method: :delete, class: 'btn-link btn-remove' %>
          <% end %>
        </div>
        <p><%= recipe.description %></p>
      </div>
    <% end %>
  </div>

  <%= link_to "Add Recipe", new_recipe_path, class: 'add-food-btn'%>
</div>
 